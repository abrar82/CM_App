<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login.RegisterUser">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/indigo_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <RelativeLayout
        android:id="@+id/imagePreview"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:clickable="true"
        android:layout_marginBottom="660dp"
        android:layout_marginEnd="168dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:background="@drawable/ic_account_circle_black_24dp"
            app:civ_border_color="#FF3d188c"
            app:civ_border_width="2dp"
            tools:layout_editor_absoluteX="153dp"
            tools:layout_editor_absoluteY="113dp" />

        <Button
            android:id="@+id/profilePicSetterImage"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_alignRight="@+id/profile_image"
            android:layout_alignBottom="@+id/profile_image"
            android:layout_marginRight="2dp"
            android:background="@drawable/edit_project_button_background"
            android:foreground="@drawable/ic_camera_alt_white_24dp"
            android:foregroundGravity="center" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>